<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_pr_validate_details" model="ir.ui.view">
            <field name="name">purchase.request.validate.details.form</field>
            <field name="model">purchase.request.validate.details</field>
            <field name="arch" type="xml">
                <form string="Purchase Request Validate Details">
                	<header>
                        <button name="process" string="Process" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                	</header>
                    <group col="4" colspan="6">
                        <field name="product_name"/>
                        <newline/>
                        <field name="product_number"/>
                        <newline/>
                        <field name="emp" invisible="True"/>
                    </group>
                    <footer>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_pr_validate_details" model="ir.actions.act_window">
            <field name="name">Purchase Request Details</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.request.validate.details</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="hr_holidays_summary_employee_value">
            <field name="model_id" ref="hr.model_hr_employee" />
            <field name="name">Leaves Summary</field>
            <field name="key2">client_print_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_hr_holidays_summary_employee'))" />
            <field name="key">action</field>
            <field name="model">hr.employee</field>
        </record>

    </data>
</openerp>
